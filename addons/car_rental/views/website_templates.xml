<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="car_listing" name="Cars Available for Rent">
        <!-- Existing template for /cars -->
        <t t-call="website.layout">
            <div class="container mt-4">
                <h1 class="text-center">Car Listing</h1>
                <!-- Existing content -->
            </div>
        </t>
    </template>

    <template id="available_for_rent" name="Available for Rent">
        <t t-call="website.layout">
            <div class="container mt-4">
                <h1 class="text-center">Rent Your Dream Car</h1>
                <p class="text-center">Explore our available cars below.</p>
                <div class="row">
                    <t t-foreach="cars" t-as="car">
                        <div class="col-md-6 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title"><t t-esc="car.name"/></h5>
                                    <p class="card-text">
                                        Price: $<t t-esc="car.price_per_day or 0.0"/><br/>
                                        <t t-esc="car.description or 'No description available'"/>
                                    </p>
                                    <a t-att-href="'/book-car/%s' % car.id" class="btn btn-success">Reserve Now</a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>
