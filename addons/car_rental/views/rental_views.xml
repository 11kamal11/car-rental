<odoo>
    <record id="view_rental_form" model="ir.ui.view">
        <field name="name">rental.form</field>
        <field name="model">car.rental.rental</field>
        <field name="arch" type="xml">
            <form string="Rental">
                <sheet>
                    <group>
                        <field name="car_id"/>
                        <field name="customer_id"/>
                        <field name="rent_date"/>
                        <field name="return_date"/>
                        <field name="duration_days" readonly="1"/>
                        <field name="daily_rate"/>
                        <field name="total_price" readonly="1"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_rental_list" model="ir.ui.view">
        <field name="name">rental.list</field>
        <field name="model">car.rental.rental</field>
        <field name="arch" type="xml">
            <list>
                <field name="car_id"/>
                <field name="customer_id"/>
                <field name="rent_date"/>
                <field name="return_date"/>
                <field name="duration_days"/>
                <field name="total_price"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="action_rental" model="ir.actions.act_window">
        <field name="name">Rentals</field>
        <field name="res_model">car.rental.rental</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_rental" name="Rentals" parent="menu_root" action="action_rental"/>
</odoo>
