<odoo>
    <record id="view_customer_form" model="ir.ui.view">
        <field name="name">customer.form</field>
        <field name="model">car.rental.customer</field>
        <field name="arch" type="xml">
            <form string="Customer">
                <group>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                </group>
            </form>
        </field>
    </record>
    <record id="view_customer_tree" model="ir.ui.view">
        <field name="name">customer.tree</field>
        <field name="model">car.rental.customer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>
    <record id="action_customer" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">car.rental.customer</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_customer" name="Customers" parent="menu_root" action="action_customer"/>
</odoo>
